<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_background_seemore"
    android:padding="@dimen/abc_action_bar_overflow_padding_end_material"
    android:gravity="center">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tableLayout1"
        android:padding="@dimen/abc_action_bar_overflow_padding_start_material"
        >
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:text="Filters"
                android:id="@+id/btnfilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_photo_filter"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Rotate"
                android:id="@+id/btnrotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_rotate_90_degrees_ccw"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Crop"
                android:id="@+id/btncrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/colorAccent"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_crop"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Text"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_format_color_text"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Frame"
                android:id="@+id/button2"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_filter_frames"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Watermark"
                android:id="@+id/button3"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_branding_watermark"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Adjust"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_equalizer"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Share"
                android:id="@+id/button2"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_share"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>
            <Button
                android:text="Delete"
                android:id="@+id/button3"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="@dimen/abc_action_bar_content_inset_material"
                android:drawableTop="@drawable/ic_delete"
                android:drawableTint="@color/colorAccent"
                android:textAllCaps="false"
                android:foreground="?android:attr/selectableItemBackground"/>

        </TableRow>


    </TableLayout>


</LinearLayout>
