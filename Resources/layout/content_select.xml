<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/abc_action_bar_overflow_padding_end_material"
  >
     <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_content_inset_material"
        />
    <Button
        android:text="إضافة صور جديدة للاستوديو الخاص بك"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnaddtitle"
        android:layout_alignParentStart="true"
        android:background="@drawable/custom_background"
        android:paddingHorizontal="@dimen/abc_action_bar_content_inset_material"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_content_inset_material"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="4dp"
          android:textAlignment="center"
        android:paddingStart="@dimen/abc_action_bar_overflow_padding_end_material"
        >
    
     <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_max_height"
        android:id="@+id/spinner1"
            android:textAlignment="center"
       android:foregroundTint="@color/colorAccent"
        android:background="@drawable/spinner_background"
            android:paddingStart="@dimen/abc_action_bar_overflow_padding_end_material"
       
        />
    
    
    </androidx.cardview.widget.CardView>
   
 
     <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_content_inset_material"
        />

      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="4dp"
        android:paddingStart="@dimen/abc_action_bar_overflow_padding_end_material"
       >
    
    <Button
        android:text="اختر صورة للتحميل"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnchoose"
         android:textAppearance="?android:attr/textAppearanceMedium"   
        android:background="@drawable/fileupload_background"
            android:textAlignment="textStart"
           android:paddingHorizontal="@dimen/abc_action_bar_content_inset_material"/>

        </androidx.cardview.widget.CardView>
     <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_content_inset_material"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_stacked_tab_max_width"
        android:id="@+id/gridViewmain"
       
        />
     <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_bar_content_inset_material"
        />
    <Button
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="حفظ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnsave"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimary"
        android:foreground="?android:attr/selectableItemBackground"

        android:drawableEnd="@drawable/ic_save"
        android:drawableTint="@color/colorAccent"
        android:layout_gravity="center"
         />
  





</LinearLayout>
